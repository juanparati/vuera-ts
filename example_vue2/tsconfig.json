{
    "compilerOptions": {
        "jsx": "react-jsx",
        "target": "esnext",
        "module": "esnext",
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "resolveJsonModule": true,
        "strict": true,
        "plugins": [
            {
                "name": "typescript-plugin-css-modules"
            }
        ],
        "baseUrl": "./src",
        "paths": {
            "react/*": [
                "./react/*"
            ]
        }
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}